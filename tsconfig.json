{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "jsx": "react",
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "./dist/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
      "baseUrl":"./",
      "allowJs": true,
      "paths": {
        "@src/*": ["src/*"]
      },
    },
    "include": [
      "./src/**/*"
    ]
  }